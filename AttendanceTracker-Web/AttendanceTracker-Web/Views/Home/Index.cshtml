@{
    ViewBag.PageName = "Home";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
    <link href="~/Content/Home/Index.css" rel="stylesheet" />
}

@section scripts {
    <script src="~/Scripts/Index.js"></script>
}

<div class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--4-col mdl-cell--4-col-tablet mdl-cell--12-col-desktop">
    <div class="mdl-card__title mdl-card--expand mdl-color--primary">
        <h2 class="mdl-card__title-text mdl-color-text--white">Percentage of Attendance to Date</h2>
    </div>
    <div class="graph-container mdl-card mdl-cell--12-col mdl-cell">
        <div class="mdl-cell--4-col mdl-cell--4-col-tablet mdl-cell--4-col-desktop mdl-celll class-chart">
            <canvas id="class1" width="200" height="200"></canvas>
        </div>
        <div class="mdl-cell--4-col mdl-cell--4-col-tablet mdl-cell--4-col-desktop mdl-celll class-chart">
            <canvas id="class2" width="200" height="200"></canvas>
        </div>
        <div class="mdl-cell--4-col mdl-cell--4-col-tablet mdl-cell--4-col-desktop mdl-celll class-chart">
            <canvas id="class3" width="200" height="200"></canvas>
        </div>
    </div>
</div>
<div class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--4-col mdl-cell--4-col-tablet mdl-cell--12-col-desktop">
    <div class="mdl-card__title mdl-card--expand mdl-color--primary">
        <h2 class="mdl-card__title-text mdl-color-text--white">Combined Attendance</h2>
    </div>
    <div class="chart-container">
        <svg fill="currentColor" viewBox="0 0 500 250" class="mdl-color-text--accent">
            <use xlink:href="#chart" />
        </svg>
    </div>
</div>

<script>
    $(document).ready(function () {
        var chart1 = document.getElementById("class1");
        var chart2 = document.getElementById("class2");
        var chart3 = document.getElementById("class3");
        var chartData = buildDougnnutChartData(0.86);
        initDoughnutChart(chart1, chartData)
        initDoughnutChart(chart2, chartData)
        initDoughnutChart(chart3, chartData)
    });
</script>
