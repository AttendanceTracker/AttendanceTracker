@{
    ViewBag.PageName = "Home";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
    <link href="~/Content/Home/Index.css" rel="stylesheet" />
}



<div class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--4-col mdl-cell--4-col-tablet mdl-cell--12-col-desktop">
    <div class="mdl-card__title mdl-card--expand mdl-color--primary">
        <h2 class="mdl-card__title-text mdl-color-text--white">Percentage of Attendance to Date</h2>
    </div>
    <div class="key-container mdl-card">
        <ul class="key-list">
            <li class="key-list-item" style="color: red;">Class 100 - 003</li>
            <li class="key-list-item" style="color: blue;">Class 300 - 001</li>
            <li class="key-list-item" style="color: green;">Class 400 - 001</li>
        </ul>
    </div>
    <div class="graph-container mdl-card mdl-cell--12-col mdl-cell">
        <svg fill="currentColor" style="color: red;" width="200px" height="200px" viewBox="0 0 1 1" class="mdl-cell--4-col mdl-cell--4-col-tablet mdl-cell--4-col-desktop">
            <use xlink:href="#piechart" mask="url(#piemask)" />
            <text x="0.5" y="0.5" font-family="Roboto" font-size="0.3" fill="#888" text-anchor="middle" dy="0.1">82<tspan font-size="0.2" dy="-0.07">%</tspan></text>
        </svg>
        <svg fill="currentColor" style="color: blue;" width="200px" height="200px" viewBox="0 0 1 1" class="mdl-cell--4-col mdl-cell--4-col-tablet mdl-cell--4-col-desktop mdl-cell">
            <use xlink:href="#piechart" mask="url(#piemask)" />
            <text x="0.5" y="0.5" font-family="Roboto" font-size="0.3" fill="#888" text-anchor="middle" dy="0.1">82<tspan dy="-0.07" font-size="0.2">%</tspan></text>
        </svg>
        <svg fill="currentColor" style="color: green;" width="200px" height="200px" viewBox="0 0 1 1" class="mdl-cell--4-col mdl-cell">
            <use xlink:href="#piechart" mask="url(#piemask)" />
            <text x="0.5" y="0.5" font-family="Roboto" font-size="0.3" fill="#888" text-anchor="middle" dy="0.1">82<tspan dy="-0.07" font-size="0.2">%</tspan></text>
        </svg>
    </div>
</div>
<div class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--4-col mdl-cell--4-col-tablet mdl-cell--12-col-desktop">
    <div class="mdl-card__title mdl-card--expand mdl-color--primary">
        <h2 class="mdl-card__title-text mdl-color-text--white">Combined Attendance</h2>
    </div>
    <div class="chart-container">
        <svg fill="currentColor" viewBox="0 0 500 250" class="mdl-color-text--accent">
            <use xlink:href="#chart" />
        </svg>
    </div>
</div>

