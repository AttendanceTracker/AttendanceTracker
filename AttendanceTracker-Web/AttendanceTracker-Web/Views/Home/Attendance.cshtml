@{
    ViewBag.PageName = "Attendance";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
    <link href="~/Content/Home/Attendance.css" rel="stylesheet" />
}

    @section scripts {
        <script src="~/Scripts/Attendance.js"></script>
    }

<div class="mdl-grid main-content" ng-app="AttendanceModule">
    <div class="mdl-grid main-content" ng-controller="AttendanceController as attendanceController">
        <button ng-click="attendanceController.backButtonClicked()" id="back-button" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored nav-button">
            <i class="material-icons">arrow_back_ios</i>
        </button>

        <button ng-click="attendanceController.forwardButtonClicked()" id="forward-button" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored nav-button">
            <i class="material-icons">arrow_forward_ios</i>
        </button>

        <div ng-if="attendanceController.classMeetings.length == 0" id="empty-attendance-text" class="mdl-color-text--grey-600">No attendance this week.</div>

        <div ng-repeat="(i, meetingDate) in attendanceController.meetingDates" class="date-container mdl-card mdl-shadow--2dp mdl-cell mdl-cell--4-col mdl-cell--4-col-tablet mdl-cell--12-col-desktop">
            <div class="mdl-card__title mdl-card--expand mdl-color--primary">
                <h2 class="mdl-card__title-text mdl-color-text--white">{{meetingDate}}</h2>
            </div>
            <div class="classes-container mdl-card mdl-cell--12-col mdl-cell">
                    <div ng-repeat="(j, meeting) in attendanceController.classMeetings[i]"  class="class-card mdl-card mdl-shadow--2dp mdl-cell">
                        <div class="mdl-card__title mdl-card--expand mdl-color--primary">
                            <h2 class="mdl-card__title-text mdl-color-text--white">{{meeting.Name}}</h2>
                        </div>
                        <div class="graph-container mdl-cell mdl-cell--12-col">
                            <canvas build-chart="attendanceController.buildChart()" meeting="{{meeting}}" id="chart{{i}}{{j}}" width="200" height="200"></canvas>
                        </div>
                        <div class="mdl-card__actions mdl-card--border">
                            <a ng-click="attendanceController.downloadButtonClicked(i, j)" class="mdl-color-text--accent mdl-button mdl-js-button mdl-js-ripple-effect">Download Attendance</a>
                            <a href="#" class="mdl-color-text--accent mdl-button mdl-js-button mdl-js-ripple-effect">Manage QR Codes</a>
                        </div>
                    </div>
            </div>
        </div>

    </div>
</div>