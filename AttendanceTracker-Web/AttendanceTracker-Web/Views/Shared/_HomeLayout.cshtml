@{
    ViewBag.Title = "AttendanceTracker";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="~/Content/Home/Home.css" rel="stylesheet" />
}

@RenderSection("scripts", required: false)

<div class="home-layout mdl-layout mdl-js-layout mdl-layout--fixed-drawer mdl-layout--fixed-header">
    <header class="main-header mdl-layout__header mdl-color--grey-100 mdl-color-text--grey-600">
        <div class="mdl-layout__header-row">
            <span class="mdl-layout-title">@ViewBag.PageName</span>
            <div class="mdl-layout-spacer"></div>
            <b id="username-label">A User</b>
            <button class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon" id="hdrbtn">
                <i class="material-icons">more_vert</i>
            </button>
            <ul class="mdl-menu mdl-js-menu mdl-js-ripple-effect mdl-menu--bottom-right" for="hdrbtn">
                <li class="mdl-menu__item">Account</li>
                <li class="mdl-menu__item">Log Out</li>
            </ul>
        </div>
    </header>
    <div class="main-drawer mdl-layout__drawer mdl-color--primary-dark mdl-color-text--white">
        <header class="main-drawer-header mdl-shadow--2dp">AttendanceTracker</header>
        <nav class="main-navigation mdl-navigation mdl-color--teal-800">
            <a class="mdl-navigation__link mdl-color-text--white" href="/Home/Index"><i class="mdl-color-text--white material-icons" role="presentation">home</i>Home</a>
            <a class="mdl-navigation__link mdl-color-text--white" href="/Home/Classes"><i class="mdl-color-text--white material-icons" role="presentation">school</i>Classes</a>
            <a class="mdl-navigation__link mdl-color-text--white" href="/Home/Attendance"><i class="mdl-color-text--white material-icons" role="presentation">assignment</i>Attendance</a>
            <a class="mdl-navigation__link mdl-color-text--white" href="/Home/QRCodes"><svg fill="currentColor" class="mdl-color-text--white material-icons custom-icon" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" width="24" height="24" viewBox="0 0 24 24"><path d="M3,11H5V13H3V11M11,5H13V9H11V5M9,11H13V15H11V13H9V11M15,11H17V13H19V11H21V13H19V15H21V19H19V21H17V19H13V21H11V17H15V15H17V13H15V11M19,19V15H17V19H19M15,3H21V9H15V3M17,5V7H19V5H17M3,3H9V9H3V3M5,5V7H7V5H5M3,15H9V21H3V15M5,17V19H7V17H5Z"></path></svg>QR Codes</a>
            <div class="mdl-layout-spacer"></div>
            <a class="mdl-navigation__link mdl-color-text--white" href=""><i class="mdl-color-text--white material-icons" role="presentation">help_outline</i><span class="visuallyhidden">Help</span></a>
        </nav>
    </div>
    <main class="mdl-layout__content mdl-color--grey-100">
        <div class="mdl-grid main-content" >
            @RenderBody()
        </div>
    </main>
</div>
